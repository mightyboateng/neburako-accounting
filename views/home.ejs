                                   <li class="nav-item">
                                          <a class="nav-link" href="#">Contact</a>
                                   </li>
                            </ul>
                     </div>
              </div>
       </nav>


       <!-- //////////////////// ////////////////////////////////////////////////
                            Continue Sesction
              //////////////////////////////////////////////////////////////////////////-->
       <section id="home" class="intro-section">

              <div class="container">
                     <div class="row align-items-center text-white">
                            <!-- Start Content for Intro -->
                            <div class="col-md-6 intros">
                                   <h1 class="display-2">
                                          <span class="display-2--intro">EBURAKO PAYROLL SOLUTIONS</span>
                                          <span class="display-2--description lh-base">
                                                 This is a multi-purpose responsive layout created with bootstrap v5.
                                                 With the help of freecodecamp, I design this web application.
                                          </span>
                                   </h1>
                                   <a href="/register">
                                          <button type="button" class="rounded-pill btn-rounded text-primary"> Sign up
                                                 here
                                                 <span>
                                                        <i class="fas fa-arrow-right"></i>
                                                 </span>
                                          </button>

                                   </a>

                            </div>
                            <!-- ################## Login Side ############## -->
                            <div class="col-md-6 intros pt-2">
                                   <div class="login-box">
                                          <form action="/" method="post">
                                                 <input class="form-control bottom" name="email" type="email"
                                                        placeholder="Email Address" required>

                                                 <input class="form-control bottom" type="password" name="password"
                                                        placeholder="Password" required>

                                                 <button class="w-100 btn btn-lg bg-primary text-white"
                                                        type="submit">Login</button>
                                          </form>
                                          <hr>

                                          <div class="card-body">
                                                 <a class="btn w-100 text-center btn-social btn-google" href="#"
                                                        role="button">
                                                        <i class="fab fa-google"></i>
                                                        Login with Google
                                                 </a>
                                          </div>
                                   </div>
                            </div>
                     </div>
              </div>
       </section>





<%- include('partials/static_header'); -%>
       <section class="contact-section">
              <div class="content">
                     <h2>Contact Us</h2>
                     <p>Providing Accounting, Bookkeeping, Payroll, Audit & QuickBooks Services and Accounting Software
                            & Point of Sale (POS)
                            Software Implementation & Training. Reach us</p>
              </div>

              <div class="contain">

                     <div class="contactInfo">
                            <div class="box">
                                   <div class="icon"><i class="fas fa-location-arrow"></i></div>
                                   <div class="text">
                                          <h3>Address</h3>
                                          <p>Teshie Nungua Estate</p>
                                   </div>
                            </div>
                            <div class="box">
                                   <div class="icon"><i class="fas fa-phone-alt"></i></div>
                                   <div class="text">
                                          <h3>Phone</h3>
                                          <p>0244575408 / 0507404360</p>
                                   </div>
                            </div>
                            <div class="box">
                                   <div class="icon"><i class="fas fa-envelope"></i></div>
                                   <div class="text">
                                          <h3>Email Address</h3>
                                          <p>neburakoghana@gmail.com</p>
                                   </div>
                            </div>
                     </div>

                     <div class="contactForm">
                            <form action="/contact" method="post">
                                   <div class="row error-message text-center w-100 bg-info text-danger">
                                          <div class="col">
                                                 <% if (message !=='' ) { %>
                                                        <h5>
                                                               <%= message %>
                                                        </h5>
                                                        <% } else{%>

                                                               <%}%>
                                          </div>
                                   </div>
                                   <h2>Send Message</h2>
                                   <div class="inputBox">
                                          <input type="text" name="user_fullName" required>
                                          <span>Full Name</span>
                                   </div>
                                   <div class="inputBox">
                                          <input type="email" name="user_email" required>
                                          <span>Email</span>
                                   </div>
                                   <div class="inputBox">
                                          <textarea name="user_message" rows="8" required></textarea>
                                          <span>Type your message.....</span>
                                   </div>
                                   <div class="inputBox">
                                          <!-- <input type="submit" value="Send"> -->
                                          <button class="btn w-100 bg-primary">Send</button>
                                   </div>
                            </form>
                     </div>
              </div>
       </section>

       <%- include('partials/static_footer'); -%>
<%- include('partials/header'); -%>

       <div class="bankadvise-section">
              <div class="container-fluid">
                     <div class="row">
                            <div class="col">
                                   <div class="container-fluid px-4 pt-4">
                                          <h5>Bank Advice</h5>
                                   </div>

                                   <% if(EmployeePayrollData.length===0) { %>
                                          <div class="container no-data">
                                                 <div class="row  ">
                                                        <div class="col-lg-12">
                                                               <img src="/images/cover.png" alt="No data image">
                                                        </div>
                                                 </div>
                                          </div>
                                          <%} else {%>

                                                 <!-- #####################################
                                                               Table
                                                 ####################################### -->
                                                 <div class="container main-content">
                                                        <table class="table">
                                                               <thead>
                                                                      <tr>
                                                                             <th scope="col">Staff ID</th>
                                                                             <th scope="col">Employee Name</th>
                                                                             <th scope="col">Bank & Branch</th>
                                                                             <th scope="col">Bank Account Number</th>
                                                                             <th scope="col">Net Salary <br><span
                                                                                           class="currency">(Ghâ‚µ)</span>
                                                                             </th>
                                                                      </tr>
                                                               </thead>
                                                               <tbody>
                                                                      <% for (let i=0; i<EmployeePayrollData.length;
                                                                             i++) { %>
                                                                             <tr>
                                                                                    <th scope="row">
                                                                                           <%= EmployeePayrollData[i].Staff_id
                                                                                                  %>
                                                                                    </th>
                                                                                    <td>
                                                                                           <%= EmployeePayrollData[i].Employee_name
                                                                                                  %>
                                                                                    </td>
                                                                                    <td>
                                                                                           <%= EmployeePayrollData[i].BankBranch_BankName
                                                                                                  %>
                                                                                    </td>
                                                                                    <td>
                                                                                           <%= EmployeePayrollData[i].Bank_account_number
                                                                                                  %>
                                                                                    </td>
                                                                                    <td>
                                                                                           <%= EmployeePayrollData[i].Net_Salary
                                                                                                  %>
                                                                                    </td>
                                                                             </tr>
                                                                             <% } %>
                                                               </tbody>
                                                        </table>

                                                 </div>

                                                 <% } %>

                            </div>
                     </div>
              </div>
       </div>

       <%- include('partials/footer'); -%>